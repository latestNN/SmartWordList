                trigger.addEventListener('click', (e) => {
                    e.stopPropagation();
                    // Close others
                    document.querySelectorAll('.custom-select-options').forEach(el => {
                        if (el !== optionsContainer) el.classList.add('hidden');
                    });
                    document.querySelectorAll('.arrow-icon').forEach(el => {
                        if (el !== arrowIcon) el.style.transform = 'rotate(0deg)';
                    });

                    // Toggle current
                    const isHidden = optionsContainer.classList.contains('hidden');
                    if (isHidden) {
                        optionsContainer.classList.remove('hidden');
                        arrowIcon.style.transform = 'rotate(180deg)';
                    } else {
                        optionsContainer.classList.add('hidden');
                        arrowIcon.style.transform = 'rotate(0deg)';
                    }
                });

                // Select option
                options.forEach(option => {
                    option.addEventListener('click', (e) => {
                        e.stopPropagation();
                        const value = option.getAttribute('data-value');
                        const text = option.textContent;

                        selectedText.textContent = text;
                        optionsContainer.classList.add('hidden');
                        arrowIcon.style.transform = 'rotate(0deg)';

                        // Visual feedback for selection
                        options.forEach(opt => {
                            opt.classList.remove('bg-blue-600', 'text-white');
                            opt.classList.add('text-slate-300');
                        });
                        option.classList.remove('text-slate-300');
                        option.classList.add('bg-blue-600', 'text-white');

                        console.log('Selected Value:', value); // For logic integration
                    });
                });
            });

            // Close when clicking outside
            document.addEventListener('click', () => {
                document.querySelectorAll('.custom-select-options').forEach(el => el.classList.add('hidden'));
                document.querySelectorAll('.arrow-icon').forEach(el => el.style.transform = 'rotate(0deg)');
            });
        });
    </script>

