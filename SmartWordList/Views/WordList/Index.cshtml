<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Sadece 'js-card-link' sınıfına sahip elementleri seçiyoruz
        const cards = document.querySelectorAll('.js-card-link');

        cards.forEach(card => {
            card.addEventListener('click', function(e) {
                // Tıklanan kartın ID'sini al
                const id = this.getAttribute('data-id');

                // Eğer ID varsa yönlendirmeyi yap
                if(id) {
                    // ASP.NET Controller ve Action yapına göre burayı düzenle:
                    // Örnek: '/Exam/Details/5' gibi bir yola gider.
                    const baseUrl = '/WordList/WordListProfile/';
                    window.location.href = baseUrl + id;
                }
            });
        });
    });
</script>